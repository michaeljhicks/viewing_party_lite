<%= link_to 'Discover Page', dashboard_discover_path %>
<%= button_to 'Create Viewing Party', "/dashboard/movies/#{@movie.id}/new",
  method: :get, params: {movie_title: @movie.title, duration: @movie.runtime_mins} %>
<h1>Movie Details for <%= @movie.title %></h1>
<p>Vote Average <%= @movie.vote_average %>  </p>
<p>Runtime: <%= @movie.runtime %>
<p>Genre(s):
  <% @movie.genres.each do |genre| %>
    <%= genre[:name] %> |
  <% end %>
</p>
<p>Description: <%= @movie.overview %></p>
<h3>Cast:</h3>
<% @movie.cast.each do |cast_member| %>
  <p><%= cast_member[:character] %>: <%= cast_member[:name] %></p>
<% end %>
<h3><%= @movie.reviews.count %> reviews </h3>
<% @movie.reviews.each do |review| %>
  <p>Author: <%= review[:author] %></p>
  <p>Review: <%= review[:content] %></p>
<% end %>
